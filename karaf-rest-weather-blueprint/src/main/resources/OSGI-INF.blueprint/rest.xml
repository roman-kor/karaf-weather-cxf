<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
             ">
    <!-- JAXRS providers -->
    <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider" />

    <cxf:bus id="cxfBusWeather">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
        <cxf:properties>
            <entry key="skip.default.json.provider.registration" value="true" />
        </cxf:properties>
    </cxf:bus>

    <jaxrs:server id="weatherRest" address="/getweather">
        <jaxrs:serviceBeans>
            <ref component-id="weatherBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref component-id="jsonProvider" />
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="weatherBean" class="org.apache.karaf.examples.rest.blueprint.WeatherServiceRestImpl">
        <argument ref="weatherServiceBean"/>
    </bean>

    <reference id="weatherServiceBean" interface="org.apache.karaf.weather.services.WeatherService">

    </reference>

</blueprint>